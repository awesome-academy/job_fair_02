<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light p-0 navbar-static-top">
      <h1 class="title"><%= link_to t("base_title"), root_path, class: "navbar-brand" %></h1>
      <button class="navbar-toggler ml-lg-auto ml-sm-5 bg-light" type="button"
        data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="ml-lg-5 navbar-nav mr-lg-auto">
          <li class="nav-item mr-lg-4 mt-lg-0 mt-sm-4 mt-3">
            <%= link_to t(".createCV"), new_curriculum_vitae_path %>
          </li>
          <% if user_signed_in? && current_user.organization_users.present? %>
            <li class="nav-item  mr-lg-4 mt-lg-0 mt-sm-4 mt-3">
              <%= link_to t(".createJob"), new_job_path %>
            </li>
          <% end %>
        </ul>
        <% if user_signed_in? %>
          <%= link_to current_user.name, current_user,
            class: "btn w3ls-btn text-uppercase font-weight-bold d-block" %>
          <li class="dropdown nav-item mr-lg-3 mt-lg-0 mt-sm-4 mt-3 list-group float-right">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".organization"), new_organization_path %></li>
              <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <%= link_to t(".signup"), "#",
            class: "btn w3ls-btn text-uppercase font-weight-bold d-block" %>
          <%= link_to t(".login"), new_user_session_path,
            class: "btn w3ls-btn btn-2 ml-lg-1 text-uppercase font-weight-bold d-block" %>
        <% end %>
      </div>
    </nav>
  </div>
</header>
<div class="d-flex banner-w3pvt-bg1 common-bg header">
  <div class="d-flex mx-auto align-items-center justify-content-center flex-column">
  </div>
</div>
