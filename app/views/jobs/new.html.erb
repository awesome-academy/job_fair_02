<% provide :title %>
<center><h1 class="text-uppercase mt-3"><%= t ".create_job" %></h1></center>

<div class="row justify-content-center mt-5">
  <div class="col-md-8">

    <%= form_with model: @job do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="form-group">
        <%= f.label :organization_id %><br>
        <%= f.select :organization_id, options_for_select(@support.organization_options),
          {include_blank: t(".choose_organization")}, {class: "form-control"} %>
      </div>
      
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-4">
          <%= f.label :career_id %><br>
          <%= f.select :career_id, options_for_select(@support.career_options),
            {include_blank: t(".choose_career")}, {class: "form-control"} %>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :age_from %>
          <%= f.text_field :age_from, class: "form-control" %>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :age_to %>
          <%= f.text_field :age_to, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :skill %>
        <%= f.text_field :skill, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :level %>
        <%= f.text_field :level, class: "form-control" %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :employment_type %>
          <%= f.text_field :employment_type, class: "form-control" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :salary, t(".salary") %>
          <%= f.text_field :salary, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :work_address %>
          <%= f.text_field :work_address, class: "form-control" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :province_id %><br>
          <%= f.select :province_id, options_for_select(@support.province_options),
            {include_blank: t(".choose_province")}, {class: "form-control"} %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :experience %>
        <%= f.text_area :experience, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :expiration_date %>
        <%= f.date_field :expiration_date, class: "form-control" %>
      </div>

      <center><%= f.submit t(".create_job"), class: "btn btn-primary mb-3" %></center>
    <% end %>
  </div>
</div>
